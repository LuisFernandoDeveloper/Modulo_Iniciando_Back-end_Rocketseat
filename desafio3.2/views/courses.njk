{% extends "layout.njk" %}

{% block head %}

        <title>Desafio 3-2 - cursos</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">

{% endblock %}

{% block content %}
        <div id="wrapper">
            <h1>Aulas Recomendadas</h1>
        </div>
        <section class="cards">
        {% for course in courses %}
            <div class="card" id="{{course.id}}">
                <div class="card_image-container3">
                    <img src="{{course.url}}" alt="{{course.name}}">
                </div>
                <div class="card_content">
                    <h2>{{course.name}}</h2>
                </div>
                <div class="card_info">
                    <p>{{course.module}}</p>
                    <p class="card_price">{{course.price}}</p>
                </div>
            </div>
        {% endfor %}
        </section>

        <div class="modal-overlay">
            <div class="modal">
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>
                <div class="modal-content">
                    <iframe src="" frameborder="0"></iframe>
                </div>
            </div>            
        </div>

        <script src="scripts.js"></script>

{% endblock %}