{% extends "layout.njk" %}

{% block head %}

        <title>Desafio 3-1 - cursos</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">

{% endblock %}

{% block content %}
        <div id="wrapper">
            <h1>Aulas Recomendadas</h1>
        </div>
        <section class="cards">

            <div class="card" id="starter">
                <div class="card_image-container">
                    <img src="img/logostarter.jpg" alt="Starter">
                </div>
                <div class="card_content">
                    <h2>Starter</h2>
                </div>
                <div class="card_info">
                    <p>5 Modulos</p>
                    <p class="card_price">Free</p>
                </div>
            </div>

            <div class="card" id="launchbase">
                <div class="card_image-container2">
                    <img src="img/logolaunchbase.png" alt="Launchbase">
                </div>
                <div class="card_content">
                    <h2>Launchbase</h2>
                </div>
                <div class="card_info">
                    <p>10 Modulos</p>
                    <p class="card_price">Free</p>
                </div>
            </div>

            <div class="card" id="gostack">
                <div class="card_image-container3">
                    <img src="img/logogoStack.PNG" alt="GoStack">
                </div>
                <div class="card_content">
                    <h2>GoStack</h2>
                </div>
                <div class="card_info">
                    <p>13 Modulos</p>
                    <p class="card_price">Free</p>
                </div>
            </div>

        </section>

        </div>
        <div id="links-footer" class="links">
            <a href="/">GitHub</a>
            <a href="/">Instagram</a>
            <a href="/">Facebook</a>
        </div>

        <div class="modal-overlay">
            <div class="modal">
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>
                <div class="modal-content">
                    <iframe src="" frameborder="0"></iframe>
                </div>
            </div>            
        </div>

        <script src="scripts.js"></script>

{% endblock %}